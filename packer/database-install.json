{
    "variables": {
        "hostname": "MySQLMiniUbuntu",
        "domain":"NetDevOps.us"
    },
    "provisioners": [{
        "type":"shell",
        "scripts":[
            "scripts/vmwaretools.sh"
        ],
        "only":["vmware-iso"]
    },{
        "type":"shell",
        "scripts":[
            "scripts/install-virtualbox.sh"
        ],
        "only":["virtualbox-iso"]
    },{
        "type": "shell",
        "scripts": [
            "scripts/vagrant.sh",
            "scripts/install-ansible.sh",
            "scripts/cleanup.sh"
        ]
    },{
        "type":"file",
        "source": "ansible/playbooks/templates/mysql",
        "destination":"/tmp/mysql"
    },{
        "type":"ansible-local",
        "inventory_groups":"database_servers",
        "playbook_file": "ansible/playbooks/install-database.yml"
    }],
    "builders": [{
      "type": "virtualbox-iso",
      "disk_size": 6192,
      "http_directory":"seed_files",
      "guest_os_type": "Ubuntu_64",
       "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "3600s",
      "iso_url": "seed_files/ubuntu-14.04.2-server-amd64.iso",
      "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
      "iso_checksum_type": "md5",
      "shutdown_command": "sudo shutdown -P now",
      "boot_wait":"4s",
      "hard_drive_interface":"sata",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "vboxmanage_post":[
          ["modifyhd", "output-virtualbox-iso/{{.Name}}.vdi", "--compact"]
      ],
      "vm_name": "MySQLMiniUbuntu",
      "boot_command":[
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " file=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1404.seed",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1404.ks.cfg",
        " locale=en_US",
        " netcfg/get_domain={{user `domain`}}",
        " netcfg/get_hostname={{user `hostname`}}",
        " noapic",
        "--",
        "<enter>"]
    },{
      "type": "vmware-iso",
      "disk_size": 6192,
      "http_directory":"seed_files",
      "guest_os_type": "ubuntu-64",
      "skip_compaction":false,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "3600s",
      "tools_upload_flavor":"linux",
      "tools_upload_path":"/tmp/{{.Flavor}}.iso",
      "iso_url": "seed_files/ubuntu-14.04.2-server-amd64.iso",
      "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
      "iso_checksum_type": "md5",
      "shutdown_command": "sudo shutdown -P now",
      "vmdk_name":"MySQLMiniUbuntu",
      "vm_name":"MySQLMiniUbuntu",
      "vmx_data":{
        "memsize": "512",
        "numvcpus":"1"
      },
      "boot_wait":"4s",
      "boot_command":[
        "<esc><esc><enter><wait>",
        "/install/vmlinuz auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " file=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1404.seed",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1404.ks.cfg",
        " locale=en_US",
        " netcfg/get_domain={{user `domain`}}",
        " netcfg/get_hostname={{user `hostname`}}",
        " noapic",
        "--",
        "<enter>"]
      }],
    "post-processors": [{
        "type": "vagrant",
        "output": "../vagrant_boxes/MySQLMiniUbuntu_{{.Provider}}.box",
        "vagrantfile_template":"./vagrantfiles/ubuntu-vagrant-database.template"
    }]
}
